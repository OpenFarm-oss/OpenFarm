<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:NativeDesktopApp.ViewModels"
             x:Class="NativeDesktopApp.Views.MessagesView"
             x:DataType="vm:MessagesViewModel">

    <DockPanel LastChildFill="True" Margin="0,0,0,0">

        <!-- Top bar -->
        <Border DockPanel.Dock="Top"
                Background="#3C3836"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,8">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="{Binding CountText}"
                           Foreground="#EBDBB2"
                           VerticalAlignment="Center" />
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            HorizontalAlignment="Right">
                    <Button Content="Refresh"
                            Command="{Binding RefreshCommand}" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Column headers -->
        <Border DockPanel.Dock="Top"
                CornerRadius="10"
                Padding="10"
                Margin="0,0,0,5">
            <Grid ColumnDefinitions="1.5*,1.5*,3*,*,*,*,*"
                  ColumnSpacing="10">
                <TextBlock Grid.Column="0"
                           Text="User"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Left" />
                <TextBlock Grid.Column="1"
                           Text="Email"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="2"
                           Text="Subject"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="3"
                           Text="PR"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="4"
                           Text="Archive"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="5"
                           Text="Waiting"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Center" />
                <TextBlock Grid.Column="6"
                           Text="Messages"
                           Foreground="#EBDBB2"
                           FontWeight="Bold"
                           HorizontalAlignment="Right" />
            </Grid>
        </Border>

        <!-- Rows -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Rows}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:ConversationSummary">
                        <Border Background="{Binding RowBackgroundColor}"
                                CornerRadius="10"
                                Margin="0,4,0,4"
                                Padding="10">
                            <Grid ColumnDefinitions="1.5*,1.5*,3*,*,*,*,*"
                                  ColumnSpacing="10"
                                  VerticalAlignment="Center">

                                <!-- User -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           TextTrimming="CharacterEllipsis" />

                                <!-- Email -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding EmailAddress}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />

                                <!-- Subject -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding OriginalSubject}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis" />

                                <!-- PR - Conditional: Text if has PR, Button if no PR -->
                                <Panel Grid.Column="3"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center">
                                    <TextBlock Text="{Binding ActivePrLabel}"
                                               IsVisible="{Binding HasPrNumber}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                    <Button Content="Add PR"
                                            IsVisible="{Binding !HasPrNumber}"
                                            Command="{Binding $parent[ItemsControl].((vm:MessagesViewModel)DataContext).AssignPrCommand}"
                                            CommandParameter="{Binding}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            FontSize="11"
                                            Padding="8,4" />
                                </Panel>

                                <!-- Archive -->
                                <Button Grid.Column="4"
                                        Content="{Binding ArchiveButtonLabel}"
                                        Command="{Binding $parent[ItemsControl].((vm:MessagesViewModel)DataContext).ToggleArchiveCommand}"
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        FontSize="11"
                                        Padding="8,4" />

                                <!-- Waiting -->
                                <TextBlock Grid.Column="5"
                                           Text="{Binding WaitingFor}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center" />

                                <!-- Messages -->
                                <Button Grid.Column="6"
                                        Content="Messages"
                                        Command="{Binding $parent[ItemsControl].((vm:MessagesViewModel)DataContext).ShowConversationCommand}"
                                        CommandParameter="{Binding}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Right" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

    </DockPanel>
</UserControl>