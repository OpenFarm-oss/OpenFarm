{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PaymentProcessingService": "Information"
    },
    "Console": {
      "FormatterName": "json",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff zzz"
      }
    }
  },
  "AllowedHosts": "*",
  "Urls": "https://0.0.0.0:443",
  "Kestrel": {
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 1048576,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "RateLimiterOptions": {
    "GlobalLimiter": {
      "Window": "00:01:00",
      "PermitLimit": 60,
      "QueueLimit": 10
    }
  },
  "PaymentService": {
    "MaxJobIdsPerRequest": 100,
    "RequestTimeout": "00:00:30",
    "RequireHttps": true
  }
}
